def fc_separacion():
    return widget.Sep(
                    linewidth = 0,
                    padding = 5,
                    foreground = color_fg,
                    background = color_bg
                )

#funcion dibujar rect√°ngulo
def fc_rectangulo(vColor,tipo):
    if tipo == 0:
        icono = "ÔÑÄ" #nf-fa-angle_double_left (0)
    else:
        icono = "ÔÑÅ" #nf-fa-angle_double_right (1)
    return widget.TextBox(
                    text = icono,
                    fontsize = tama√±o_barra,
                    foreground = vColor,
                    background = color_bg
                )

#funcion para escribir un texto o un icono
def fc_icono_grupo1(icono,color_grupo):
    return widget.TextBox(
        text = icono,
        foreground = color_grupo1,
        background = color_bg,
        fontsize = tama√±o_iconos
    )

def fc_icono_grupo2(icono,color_grupo):
    return widget.TextBox(
        text = icono,
        foreground = color_grupo2,
        background = color_bg,
        fontsize = tama√±o_iconos
    )
