#LLAMADA AL AUTOSTART.SH PARA CONFIGURAR CIERTAS COSAS AL ENTRAR A QTILE
@hook.subscribe.startup_once
def autostart():
    script = os.path.expanduser("~/.config/qtile/autostart.sh")
    subprocess.run([script])



